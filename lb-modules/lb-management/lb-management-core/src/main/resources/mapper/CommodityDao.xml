<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xyz.qumn.lb.management.core.dao.CommodityMapper">

    <resultMap type="xyz.qumn.lb.management.core.pojo.entity.Commodity" id="CommodityMap">
        <result property="cid" column="cid"/>
        <result property="catId" column="cat_id"/>
        <result property="desc" column="desc"/>
        <result property="img" column="img"/>
        <result property="mid" column="mid"/>
        <result property="name" column="name"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <association property="category" javaType="xyz.qumn.lb.management.core.pojo.entity.Category">
            <id property="catId" column="cat_id"/>
            <result property="name" column="cat_name"/>
            <result property="mid" column="mid"/>
            <result property="priority" column="priority"/>
        </association>
        <collection property="specifications" javaType="java.util.List" resultMap="specification"/>
    </resultMap>

    <resultMap id="specification" type="xyz.qumn.lb.management.core.pojo.entity.Specification">
        <id property="sid" column="sid"/>
        <result property="cid" column="cid"/>
        <result property="price" column="price"/>
        <collection property="attributes" ofType="xyz.qumn.lb.management.core.pojo.entity.SpecificationAttribute">
            <id property="aid" column="aid" jdbcType="INTEGER"/>
            <result property="key" column="key" jdbcType="VARCHAR"/>
            <result property="value" column="value" jdbcType="VARCHAR"/>
        </collection>
    </resultMap>

    <sql id="selectCommodity">
        select c.cid,
               c.cat_id,
               c.`desc`,
               c.img,
               c.mid,
               c.`name`,
               c.create_time,
               c.update_time,
               lcat.name as cat_name,
               lcat.priority,
               lcs.sid,
               lcs.price,
               lcsa.aid,
               lcsa.`key`,
               lcsa.value
        from lb_commodity c
                 left join lb_category lcat on lcat.cat_id = c.cat_id
                 left join lb_commodity_spc lcs on c.cid = lcs.cid
                 left join lb_commodity_spc_atb lcsa on lcs.sid = lcsa.sid
    </sql>

    <select id="selectByMid" resultMap="CommodityMap">
        <include refid="selectCommodity"/>
        where c.mid = #{mid}
    </select>
    <select id="selectById" resultMap="CommodityMap">
        <include refid="selectCommodity"/>
        where c.cid = #{cid}
    </select>


</mapper>

